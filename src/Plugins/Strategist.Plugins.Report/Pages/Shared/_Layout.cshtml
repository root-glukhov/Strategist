<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=1920, initial-scale=1.0">
    <title>@ViewData["Title"] - Strategist Report Plugin</title>
    <base href="/">

    <style>
        html,
        body {
            font-family: 'Trebuchet MS', Roboto, Ubuntu, sans-serif;
            background-color: #000;
            margin: 0;
            padding: 0;
            overflow: hidden;
            display: block;
            width: 100%;
            height: 100%;
        }

        div.container {
            width: 100%;
            height: 100%;
        }

        #logo {
            position: absolute;
            left: 28%;
            top: 26px;
            width: 32px;
            height: 32px;
            z-index: 999;
        }

            #logo:empty {
                display: none;
            }

            #logo img {
                width: 100%;
                height: 100%;
            }

        #stat:empty {
            display: none;
        }

        #stat {
            position: absolute;
            bottom: 0;
            left: 0;
            z-index: 1;
            color: #fff;
            padding: 10px;
            margin: 120px 0 0 90px;
            background: rgba(0, 0, 0, 0.5);
        }

            #stat b {
                display: inline-block;
                width: 100px;
            }

    </style>
</head>

<body>
    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
